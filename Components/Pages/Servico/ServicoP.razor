        {
            <tr>
                <td colspan="6" class="text-center text-muted">Nenhum servi√ßo cadastrado</td>
            </tr>
        }
        else
        {
            int contador = 1;

            @foreach (var s in listaServicos)
            {
                <tr>
                    <td>@contador</td>
                    <td>@s.Descricao</td>
                    <td>@s.Tipo</td>
                    <td>@s.Valor</td>
                    <td>@s.NomeFuncionario</td>
                    <td>@s.NomeCliente</td>
                </tr>

                contador++;
            }
        }
    </tbody>
</table>

@code {
    private List<Servico> listaServicos = new();

    protected override void OnInitialized()
    {
        CarregarServicos();
    }

    private void CarregarServicos()
    
    {
        listaServicos = servicoDAO.Listar();
    }

    private void VoltarInicio()
    {
        Navigation.NavigateTo("/");
    }
}
