<!-- Tabela -->
<table class="table mt-3">
    <thead>
        <tr>
            <th>#</th>
            <th>Descri√ß√£o</th>
            <th>Tipo</th>
            <th>Valor (R$)</th>
            <th>Funcion√°rio</th>
            <th>Cliente</th>
        </tr>
    </thead>
    <tbody>
