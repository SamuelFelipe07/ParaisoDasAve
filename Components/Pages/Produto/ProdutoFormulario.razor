@page "/produtos/novo"
@rendermode InteractiveServer

@using AppExemplo.Models;
@inject ProdutoDAO produtoDAO;
@inject NavigationManager Navigation;

<header class="topbar" style="display: flex; justify-content: space-between; align-items: center; background-color: #004b93; color: white; padding: 10px 20px;">
    <div class="logo" style="display: flex; align-items: center; gap: 10px;">
        <img src="https://img.icons8.com/color/48/000000/bird--v1.png" alt="Logo" />
        <span style="font-weight: bold; font-size: 1.2rem;">GESTÃO DE PRODUTOS</span>
    </div>

    <button @onclick="VoltarInicio"
            style="font-size: 24px; background: none; border: none; color: white; cursor: pointer;"
            title="Voltar para início">🏠</button>
</header>
<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Novo Produto</h1>

@if(erro != null)
{
    <div class="alert alert-danger">
        @erro
    </div>
}

<div class="row">
    <div class="col">
        <EditForm Model="_novoProduto" OnSubmit="Salvar">
            <div class="form-group mb-4">
                <label>Nome</label>
                <input @bind-value="_novoProduto!.Nome" type="text" class="form-control" name="nome" placeholder="Informe o nome do produto"/>
            </div>

            <div class="form-group mb-4">
                <label>Quantidade</label>
                <input @bind-value="_novoProduto!.Quantidade" type="text" class="form-control" name="quantidade" placeholder="Informe a quantidade de produtos"/>
            </div>

            <div class="form-group mb-4">
                <label>Preço</label>
                <input @bind-value="_novoProduto!.Preco" type="text" class="form-control" name="preco" placeholder="Informe o preço do produtos"/>
            </div>

            <div class="form-group mb-4">
                <label>Marca</label>
                <input @bind-value="_novoProduto.Marca" type="text" class="form-control" name="nome" placeholder="Informe a marca do produto" />
            </div>

            <div class="form-group mb-4">
                <label>Descrição</label>
                <textarea class="form-control" rows="5">@_novoProduto!.Descricao</textarea>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="button" class="btn btn-secondary px-4" @onclick="LimparFormulario">
                    Limpar
                </button>
                <button type="submit" class="btn btn-primary px-4">
                    Salvar
                </button>
            </div>        </EditForm>
    </div>
    
</div>


@code {

    private string? erro = null;

    [SupplyParameterFromForm]
    private Produto? _novoProduto { get; set; } = new();

    private void Salvar()
    {

        try
        {
            if(_novoProduto.Nome is null || _novoProduto.Nome == "")
            {
                throw new Exception("O campo nome é obrigatório.");
            }
            produtoDAO.Inserir(_novoProduto);

            Navigation.NavigateTo("/produtos");
        }catch(Exception ex)
        {
            erro = ex.Message;
        }

    }

      private void LimparFormulario()
        {
            _novoProduto = new Produto(); // <--- totalmente qualificado
            erro = null;
            StateHasChanged();
        }
    private void VoltarInicio()
    {
        Navigation.NavigateTo("/");
    }
}
